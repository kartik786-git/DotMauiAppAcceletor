<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:DotMauiAppAcceletor.ViewModels"
			 x:Class="DotMauiAppAcceletor.Views.SampleListDetailPage"
			 x:DataType="vm:SampleListDetailViewModel">
	<ScrollView>
		<VerticalStackLayout Margin="12">
			<Label Text="{Binding Item.Title}" FontSize="Header" />
			<Label Text="{Binding Item.Description}" FontSize="Default" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
